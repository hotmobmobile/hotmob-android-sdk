<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".dashboard.DashboardFragment">

    <com.hotmob.sdk.ad.HotmobBanner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:adcode="hotmob_android_v2_html_inapp_banner" />

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#E44B1E"
            android:padding="48dp"
            android:gravity="center"
            android:textSize="36sp"
            android:text="1"
            app:layout_constraintTop_toBottomOf="@+id/banner"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/textView"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/textView2"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#F49C03"
            android:padding="48dp"
            android:gravity="center"
            android:textSize="36sp"
            android:text="2"
            app:layout_constraintTop_toBottomOf="@+id/banner"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView2"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintHorizontal_bias="0.5"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#9EBF79"
            android:padding="48dp"
            android:gravity="center"
            android:textSize="36sp"
            android:text="3"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/textView4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/textView3"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#5890B6"
            android:padding="48dp"
            android:gravity="center"
            android:textSize="36sp"
            android:text="4"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintHorizontal_bias="0.5"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="32dp"
            android:gravity="center"
            android:textSize="18sp"
            android:text="There is 1 ad in this page."
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"/>

