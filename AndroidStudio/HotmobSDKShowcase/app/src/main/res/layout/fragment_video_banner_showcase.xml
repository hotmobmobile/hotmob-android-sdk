<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".videobanner.VideoBannerShowcaseFragment">

    <HorizontalScrollView
            android:id="@+id/clickActionsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
                android:id="@+id/clickActions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

    </HorizontalScrollView>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/clickActionsContainer"
            app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:id="@+id/bannerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical"
                    android:background="#222"
                    app:layout_constraintTop_toBottomOf="@id/clickActionsContainer">

                <TextView
                        android:id="@+id/currentAdCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#666"
                        android:text="Here is Video Banner!" />

                <TextView
                        android:id="@+id/bannerStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#666"
                        android:text="How's it going bro?" />

                <com.hotmob.sdk.ad.HotmobBanner
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:identifier="VideoBannerShowcase" />

            </LinearLayout>

            <TextView
                    android:id="@+id/showFloatingObstacle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="32dp"
                    android:text="Show floating obstacle"
                    android:textColor="#666"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="32dp"
                    android:text="Scroll"
                    android:textColor="#666"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="32dp"
                    android:text="Scroll"
                    android:textColor="#666"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="32dp"
                    android:text="Scroll"
                    android:textColor="#666"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="32dp"
                    android:text="Scroll"
                    android:textColor="#666"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="32dp"
                    android:text="Scroll"
                    android:textColor="#666"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="32dp"
                    android:text="Scroll"
                    android:textColor="#666"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="32dp"
                    android:text="Scroll"
                    android:textColor="#666"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="32dp"
                    android:text="Scroll"
                    android:textColor="#666"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="32dp"
                    android:text="Scroll"
                    android:textColor="#666"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="32dp"
                    android:text="Scroll"
                    android:textColor="#666"/>

        </LinearLayout>

    </ScrollView>

    <TextView
            android:id="@+id/floatingObstacle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Floating obstacle"
            android:gravity="center"
            android:padding="16dp"
            android:alpha="0.6"
            android:background="#222"
            app:layout_constraintTop_toBottomOf="@id/clickActionsContainer" />

</androidx.constraintlayout.widget.ConstraintLayout>