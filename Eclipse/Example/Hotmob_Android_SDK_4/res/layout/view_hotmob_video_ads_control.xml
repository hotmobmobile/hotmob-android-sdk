<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@color/video_ads_control_bar_bgcolor"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <ImageButton
        android:id="@+id/hotmob_video_ads_control_play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:background="@android:color/transparent"
        android:src="@drawable/hotmob_video_play"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <ImageButton
        android:id="@+id/hotmob_video_ads_control_pause_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@android:color/transparent"
        android:src="@drawable/hotmob_video_pause"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />
    
    <ImageButton
        android:id="@+id/hotmob_video_ads_control_replay_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@android:color/transparent"
        android:src="@drawable/hotmob_video_replay" 
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:id="@+id/hotmob_video_ads_control_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hotmob_video_ads_control_time_label_text"
        android:textColor="@android:color/white"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>
    
    <SeekBar
        android:id="@+id/hotmob_video_ads_control_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" 
        android:secondaryProgress="255"
        android:progressDrawable="@drawable/video_ad_seekbar_progress"
        android:thumb="@drawable/hotmob_video_progress_bar_point" 
        android:paddingLeft="7dp"
        android:paddingRight="5dp"
        android:minHeight="1dip"
        android:maxHeight="2dip"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/hotmob_video_ads_control_total_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hotmob_video_ads_control_time_label_text"
        android:textColor="@android:color/white"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>
        
    <ImageButton
        android:id="@+id/hotmob_video_ads_control_sound_on_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@android:color/transparent"
        android:src="@drawable/hotmob_video_mute"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />
    
    <ImageButton
        android:id="@+id/hotmob_video_ads_control_sound_off_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:background="@android:color/transparent"
        android:src="@drawable/hotmob_video_unmute"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <ImageButton
        android:id="@+id/hotmob_video_ads_control_expand_full_screen_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@android:color/transparent"
        android:src="@drawable/hotmob_video_expand_fullscreen"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <ImageButton
        android:id="@+id/hotmob_video_ads_control_collapse_full_screen_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:background="@android:color/transparent"
        android:src="@drawable/hotmob_video_collapse_fullscreen"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

</LinearLayout>
